@using Blazor.Data

@if (Items == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Temp. (C)</th>
            <th>Summary</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Items)
        {
            <tr>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.TemperatureC</td>
                <td>@item.Summary <WeatherSummaryIcon Summary="@item.Summary" /></td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    #nullable enable

    [Parameter] public WeatherForecast[]? Items { get; set; }
}
